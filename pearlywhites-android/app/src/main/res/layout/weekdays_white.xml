<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/weekLL"
              tools:ignore="MissingPrefix"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center|left"
        android:weightSum="10">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="WORK DAY PREFERENCES"
            android:textSize="@dimen/header_textsize"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_daysMark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textColor="@color/label_textcolor"
            android:textSize="@dimen/label_hint_textsize"/>


        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="M"/>

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"/>

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="W"/>

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="T"/>

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="F"/>

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"/>

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="MORNING\n(7 - 12 PM)"
            android:textColor="@color/label_textcolor"
            android:textSize="@dimen/label_weekday_textsize"/>

        <ImageView
            android:id="@+id/monday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/tuesday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/wednesday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/thursday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/friday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/saturday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/sunday_morning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="AFTERNOON\n(12 - 5 PM)"
            android:textColor="@color/label_textcolor"
            android:textSize="@dimen/label_weekday_textsize"/>

        <ImageView
            android:id="@+id/monday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/tuesday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/wednesday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/thursday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/friday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/saturday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/sunday_afternoon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            style="@style/regular_text"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="EVENING\n(5 - 7 PM)"
            android:textColor="@color/label_textcolor"
            android:textSize="@dimen/label_weekday_textsize"/>

        <ImageView
            android:id="@+id/monday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/tuesday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/wednesday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/thursday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/friday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/saturday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

        <ImageView
            android:id="@+id/sunday_evening"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@drawable/day2"/>

    </LinearLayout>


</LinearLayout>