<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/margin_small">

    <ImageView
        android:id="@+id/notifications_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/notification"
        android:layout_centerInParent="true"/>



    <TextView
        android:id="@+id/notification_number_tv"
        android:layout_width="@dimen/margin_small"
        android:layout_height="@dimen/margin_small"
        android:layout_alignEnd="@id/notifications_iv"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/notification_alert_circle"
        android:textSize="@dimen/margin_8" />

</RelativeLayout>

