<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/pageTitleColor"
              android:orientation="vertical"
              android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/message_alert_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="THSC hospital has accepted your application"
        android:textColor="@color/white"
        android:textSize="@dimen/bottom_text_size"/>

    <TextView
        android:id="@+id/view_job_alert_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/view_job"
        android:textColor="@color/white"
        android:textSize="@dimen/bottom_text_size"/>

    <TextView
        android:id="@+id/posted_ago_alert_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="23 hours ago"
        android:textColor="@color/silver"
        android:textSize="@dimen/bottom_text_size"/>

</LinearLayout>